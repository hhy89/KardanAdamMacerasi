<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_scene"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/recordImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="163dp"
        android:background="@android:color/transparent"
        android:src="@drawable/records"
        android:contentDescription="@string/record_image" />

    <ImageButton
        android:id="@+id/playGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordImage"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/menu_ball_play"
        android:contentDescription="@string/playgame" />

    <TextView
        android:id="@+id/recordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordImage"
        android:layout_toEndOf="@+id/recordImage"
        android:layout_toRightOf="@+id/recordImage"
        android:text="@string/default_record"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/howTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/playGame"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/howTo"
        android:src="@drawable/howto" />
</RelativeLayout>
