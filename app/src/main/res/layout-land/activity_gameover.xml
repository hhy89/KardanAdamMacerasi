<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_other"
    tools:context=".MenuActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/gameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/game_over" />

    <ImageView
        android:id="@+id/recordImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playGame"
        android:layout_alignStart="@+id/playGame"
        android:layout_below="@+id/gameOver"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/record_image"
        android:src="@drawable/records" />

    <TextView
        android:id="@+id/recordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordImage"
        android:layout_toEndOf="@+id/recordImage"
        android:layout_toRightOf="@+id/recordImage"
        android:text="@string/default_record"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/playGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/playgame"
        android:src="@drawable/menu_ball_play" />
</RelativeLayout>
